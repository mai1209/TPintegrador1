<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/afa08abdc7.js" crossorigin="anonymous"></script>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
    <script defer src="/js/js.js"></script>

</head>

<body>

    <!--header-->
    <%- include('partials/header') %>
    <!--header-->

        <h2 class="title1">sport wear</h2>


        <div class="container-img">
            <% productos.forEach(producto=>{ %>

                <div class="container-img-hover">
                    <a href="/products/detail/<%= producto.id %>"><img src="<%=producto.img %>" class="short"> </a>
                    <div class="text-img">
                        <p>
                            <%=producto.price %>
                        </p>
                        <p>
                            <%=producto.name %>
                        </p>
                    </div>
                </div>

            <% })%>
        </div>
        

        <!--footer-->
        <%- include('partials/footer') %>
        <!--footer-->



</body>

</html>